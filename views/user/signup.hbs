 
        <div class="container-fluid">
            <form action="/signup" method="post">
            <div class="row h-60 align-items-center w-60 justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="login text-dark rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex text-center mb-3">
                            
                            <h3 class="w-100">Register</h3>
                        </div>
                         <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingText" placeholder="First Name" name="Firstname"  required>
                            <label for="floatingText">First Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingText" placeholder="Last Name " name="Lastname" required>
                            <label for="floatingText">Last Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingText" placeholder="Email" name="email" required>
                            <label for="floatingEmail">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="floatingText" placeholder="Password" name="password" required>
                            <label for="floatingPassword">Password</label>
                        </div>
                     <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="floatingText" placeholder="Password" name="reEnter" required>
                            <label for="floatingPassword">Confirm Password</label>
                        </div>
                     
                        <button type="submit" class="btn btn-success py-3 w-100 mb-4">Submit</button>
                        <div class="form-floating mb-3 text-danger">
                            {{#if errorPass}}
                            <p>
                                *Password and re-enter password should be same
                            </p>{{/if}}
                        </div>
                       
                    </div>
                </div>
            </div>
            </form>
        </div>

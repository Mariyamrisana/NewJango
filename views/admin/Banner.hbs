<div class="content">

  <div class="container-fluid pt-4 px-4">
    <div class="row g-4">
      <div class="col-sm-12 col-xl-12">
        <div class="bg-secondary rounded h-100 p-4">
          <h4 class="mt-3 text-white">Sliders</h4>

          <div class="text-right">

            <button type="button" class="btn btn-success m-2" id="btn"><a
                href="/admin/addSlider"
                class="text-decoration-none text-white"
              > Add Slider</a></button>
          </div>

          <table class="table table-hover text-white" id="slider-table">
            <thead>
              <tr>
                <th scope="col">Slno</th>

                <th scope="col">Slider Name</th>
                <th scope="col">Collection</th>
                <th scope="col">Description</th>
                <th scope="col">Slider Image</th>
                <th scope="col">Edit/Delete</th>

              </tr>
            </thead>
            {{#each sliders}}
              <tbody>

                <tr>
                  <th scope="row">{{inc @index}}</th>

                  <td>{{this.sliderName}}</td>
                  <td>{{this.sliderCollection}}</td>
                  <td>{{this.sliderDescription}}</td>
                  <td><img
                      src="/banner-image/{{this._id}}.jpg"
                      alt=""
                      width="50px"
                      height="50px"
                    /></td>

                  <td>
                    <button type="button" class="btn btn-primary m-2"><a
                        href="/admin/editSlider/{{this._id}}"
                        class="text-decoration-none text-white">Edit</a></button></td>
                </tr>

              </tbody>
            {{/each}}
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid pt-4 px-4">
    <div class="row g-4">
      <div class="col-sm-12 col-xl-12">
        <div class="bg-secondary rounded h-100 p-4">
          <h4 class="mt-3 text-white">Banners</h4>

          <div class="text-right">

            <button type="button" class="btn btn-success m-2" id="btn"><a
                href="/admin/addBanner"
                class="text-decoration-none text-white"
              > Add Banner</a></button>
          </div>

          <table class="table table-hover text-white" id="bannerTables">
            <thead>
              <tr>
                <th scope="col">Slno</th>
                <th scope="col">Banner Name</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Banner Image</th>
                <th scope="col">Edit/Delete</th>

              </tr>
            </thead>
            {{#each banner}}
              <tbody>

                <tr>
                  <th scope="row">{{inc @index}}</th>

                  <td>{{this.bannerName}}</td>
                  <td>{{this.bannerCategory}}</td>
                  <td>{{this.bannerDescription}}</td>
                  <td><img
                      src="/banner-image/{{this._id}}.jpg"
                      alt=""
                      width="50px"
                      height="50px"
                    /></td>

                  <td>
                    <button type="button" class="btn btn-primary m-2"><a
                        href="/admin/editBanner/{{this._id}}"
                        class="text-decoration-none text-white"
                      >Edit</a></button></td>
                </tr>

              </tbody>
            {{/each}}

          </table>

        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () { $('#slider-table').wrap('<div id="hide"
  style="display:none"/>'); $('#hide').css('display', 'block'); }); var table =
  $('#slider-table').DataTable();
</script>

<script>
  $(document).ready(function () { $('#bannerTables').wrap('<div id="hide"
  style="display:none"/>'); $('#hide').css('display', 'block'); }); var table =
  $('#bannerTables').DataTable();
</script>
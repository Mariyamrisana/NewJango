 
        <div class="container-fluid">
            <form action="/admin/editSlider/{{sliderData._id}}" method="post" enctype="multipart/form-data">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex text-center mb-3">
                            
                            <h3 class="w-100">Edit Slider</h3>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" value="{{sliderData.sliderCollection}}" id="floatingText" placeholder="Email" name="sliderCategory">
                            <label for="floatingText">Collection</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" value="{{sliderData.sliderDescription}}" id="floatingText" placeholder="Email" name="sliderDescription">
                            <label for="floatingText">Description</label>
                        </div>
                       
                       <div class="form-floating mb-3">
                        <img src="/banner-image/{{sliderData._id}}.jpg" width="100px" height="80px" alt="" id="imgView">
                       </div>
                         <div class="form-floating mb-3">
                            
                            <input type="file" class="form-control" id="floatingFile" placeholder="Image" name="image" onchange="viewImage(event)">
                            <label for="floatingFile">Image</label>
                        </div>
                       
                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Submit</button>
                       
                    </div>
                </div>
            </div>
            </form>
        </div>

        <script>
            function viewImage(event){
                document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
            }
        </script>

  <div class="content">
            
   <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h4 class="mt-3 text-white" >Product List</h4>
                            <div class="text-right"> <a href="/admin/addproduct"><button type="button" class="btn btn-outline-success m-2  mb-3">Add Product</button></a></div>
                            <table class="table table-hover text-white" id="producttable" >
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Product Name</th>
                                 
                                        <th scope="col">Price</th>
                                        <th scope="col">Category</th>

                                         <th scope="col">Product Image</th>
                                          <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                {{#each products}}
                                <tbody>
                                    <tr>
                                        <th scope="row">{{inc @index}}</th>
                                        <td>{{this.Pro-name}}</td>
                                        <td>{{this.price}}</td>
                                        <td>{{this.category}}</td>

                                        <td><img src="/images/{{this._id}}_1.jpg" alt=""  width="50px" height="50px"></td>
                                       
                                        <td><button type="button" class="btn btn-outline-danger m-2"><a href="/admin/product-delete/{{this._id}}" class="text-decoration-none text-white">Delete</a></button></td>
                                    </tr>
                                    
                                 
                                </tbody>
                                {{/each}}
                           </table>
                        </div>
                    </div>
                </div>
            </div>
  </div>
   
  <script>
    $(document).ready(function () {


        $('#producttable').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#producttable').DataTable();
</script>
 
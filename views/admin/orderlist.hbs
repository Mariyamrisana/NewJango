  <div class="content">
            
   <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h4 class="mt-3 text-white" >Order List</h4>
                           
                            <table class="table table-hover text-white" id="order-table" >
                                <thead>
                                    <tr>
                                        <th scope="col">Sl No</th>
                                        
                                        <th scope="col">Date</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Price</th>
                                         <th scope="col">Options</th>
                                         <th scope="col">View Product</th>
                                         
                                    </tr>
                                </thead>
                                <tbody>

                                    {{#each orders}}
                                   
                                    <tr>
                                        <th scope="row">{{inc @index}}</th>
                                         <td>{{this.date}}</td>
                                        <td>{{this.address.State}}<br>{{this.address.place}}<br>{{this.address.mobile}}</td>
                                        <td>{{this.status}}</td>
                                        <td>{{this.total}}</td>
                                        <td>
                                          
                                          {{#if cancel}}

                                       <a href="/admin/Unblocked/{{this._id}}" class="btn btn-warning" id="blocking">Unblock</a>
                                       {{/if}}
                                       {{#unless cancel}}
                                       {{#if shipped}}
                                        
                                        <a href="/admin/placed/{{this._id}}" class="btn btn-success" id="placed">Delivered</a>
                                    
                                          
                                        {{else if orderPlaced}}
                                        <a href="/admin/placed/{{this._id}}" class="btn btn-success" id="placed">Delivered</a>
                                        <a href="/admin/shipped/{{this._id}}" class="btn btn-primary" id="shipped">Shipped</a>
                                        <a href="/admin/cancel/{{this._id}}" onclick="return confirm('Are u sure want to cancel this order')" class="btn btn-danger" id="blocking">Block</a>
                                     
                                        {{/if}}
                                      {{/unless}}
                                     
                                     
                                        </td>
                                          <td>
                                            <a href="/admin/viewOrderList1/{{this._id}}" class="btn btn-primary">View Product</a>
                                          </td> 
                                       
                                    </tr>
                                  
                                {{/each}}
                                </tbody>

                            </table>
                              </div>
                    </div>
                </div>
            </div>
  </div>
  <script>
    $(document).ready(function () {


        $('#order-table').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#product-table').DataTable();
</script>
                      